<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="50">
            <ComboBox Width="250" Height="33" SelectionChanged="ComboBox_SelectionChanged" ItemsSource="{Binding ComboBox1}" FontFamily="Times NEW Roman" FontSize="25" />
            <ComboBox Width="300" Height="33" SelectionChanged="ComboBox_SelectionChanged_1"  Margin="150 0" ItemsSource="{Binding ComboBox2}" FontFamily="Times NEW Roman" FontSize="25" />
        </StackPanel>
        <DataGrid ItemsSource="{Binding Books}" Height="250" Margin="10"/>
    </StackPanel>
</Window>
